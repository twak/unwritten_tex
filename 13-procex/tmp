+Corner $last$ = Raise (LastIn($g$).nextCorner)\;
+InsertCornerBefore($g$, $first$)\;
+InsertCornerAfter($g$, $last$)\;
+RemoveCorners($g$)\;
+$first$.nextEdge = FindOneEdge($f$)\;
+$last$.prevEdge = FindOneEdge($f$)\;
+$first$.nextCorner = $last$\;
+$last$.previousCorner = $first$\;
+
+}
